<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/type_pokemon_card"
    android:background="@drawable/recycler_item_bckg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recycler_item_bckg">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:contentDescription="@string/pokemon_image_desc"
            android:src="@drawable/ic_baseline_image_24"
            android:id="@+id/pokemon_image" />

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image"
            android:textAppearance="@style/Headline3DarkCenter"
            android:text="@string/bulbasaur"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            android:textAlignment="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>