<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/surface_0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/speed"
        android:id="@+id/title_stars"
        android:textAppearance="@style/Headline3DarkLeft" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_stars"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_1"
        app:layout_constraintStart_toEndOf="@+id/star1"
        app:layout_constraintTop_toBottomOf="@+id/title_stars"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_1"
        app:layout_constraintStart_toEndOf="@id/star2"
        app:layout_constraintTop_toBottomOf="@+id/title_stars"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_1"
        app:layout_constraintStart_toEndOf="@id/star3"
        app:layout_constraintTop_toBottomOf="@+id/title_stars"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/speed"
        android:id="@+id/rating"
        android:textAppearance="@style/Headline3ColdGrayRight"
        android:textAlignment="textEnd" />

</androidx.constraintlayout.widget.ConstraintLayout>